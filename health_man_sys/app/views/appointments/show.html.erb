<div class="appointment-details">
  <h1>Appointment Details</h1>
  <p><strong>Date:</strong> <%= @appointment.date %></p>
  <p><strong>Time:</strong> <%= @appointment.time %></p>
  <p><strong>Doctor:</strong> <%= @appointment.doctor %></p>
  <small><%= link_to "Back", appointments_path %> <%= link_to "Edit Appointment Details", edit_appointment_path(@appointment) %></small>
  <small><%= link_to "Delete Appointment", appointment_path(@appointment), method: :delete, data: { confirm: "Are you sure?" } %></small>
</div>
