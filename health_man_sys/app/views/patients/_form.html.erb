<%= form_for @patient do |f| %>
  <%= f.label :first_name %><br />
  <%= f.text_field :first_name %><br />
  <br />
  <%= f.label :surname %><br />
  <%= f.text_field :surname %><br />
  <br />
  <%= f.label :date_of_birth %><br />
  <%= f.date_field :date_of_birth %><br />
  <br />
  <%= f.label :address %><br />
  <%= f.text_area :address %><br />
  <br />
  <%= f.label :phone_no %><br />
  <%= f.text_field :phone_no %><br />
  <br />
  <%= f.label :medical_card %><br />
  <%= f.check_box :medical_card %><br />
  <br />
  <%= f.label :medical_insurance %><br />
  <%= f.text_field :medical_insurance %><br />
  <br />
  <%= f.submit %>
<% end %>
