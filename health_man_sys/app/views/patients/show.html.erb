<div class="patient-details">
  <h1>Name: <%= @patient.first_name %> <%= @patient.surname %></h1>
  <p><strong>Date of Birth:</strong> <%= @patient.date_of_birth %></p>
  <p><strong>Address:</strong> <%= @patient.address %></p>
  <p><strong>Phone No.:</strong> <%= @patient.phone_no %></p>
  <p><strong>Medical Card:</strong> <%= @patient.medical_card %></p>
  <p><strong>Medical Insurance:</strong> <%= @patient.medical_insurance %></p>
  <button><%= link_to "Add New Record", new_record_path %></button><button><%= link_to "Show Records", records_path %></button><br><br>
  <button><%= link_to "Add New Appointment", new_appointment_path %></button><br><br>
  <small><%= link_to "Back", patients_path %> <%= link_to "Edit Patient Details", edit_patient_path(@patient) %></small>
  <small><%= link_to "Delete Patient", patient_path(@patient), method: :delete, data: { confirm: "Are you sure?" } %></small>
</div>
